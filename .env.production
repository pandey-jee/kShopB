# Production Environment Variables for Panditji Auto Connect Backend
NODE_ENV=production
PORT=5004

# Database Configuration
# Replace with your MongoDB Atlas production connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/panditji-auto-connect?retryWrites=true&w=majority

# JWT Configuration
# Generate a strong JWT secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRE=30d

# Cloudinary Configuration (Production)
CLOUDINARY_CLOUD_NAME=dvtefurxs
CLOUDINARY_API_KEY=693139631253219
CLOUDINARY_API_SECRET=sF-jAxVN-P3Hms7HEilDiSWQVOw

# Email Configuration (Gmail SMTP for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=${EMAIL_USER}
EMAIL_PASS=${EMAIL_APP_PASSWORD}
EMAIL_FROM=${EMAIL_FROM}
ADMIN_EMAIL=${ADMIN_EMAIL}

# Payment Gateway (Razorpay Live Keys)
RAZORPAY_KEY_ID=${RAZORPAY_LIVE_KEY_ID}
RAZORPAY_KEY_SECRET=${RAZORPAY_LIVE_KEY_SECRET}

# Frontend Configuration
FRONTEND_URL=${FRONTEND_URL}
ADMIN_FRONTEND_URL=${ADMIN_FRONTEND_URL}

# CORS Configuration
CORS_ORIGIN=${CORS_ORIGIN}

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=${SESSION_SECRET}

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=5242880
LOG_FILE_MAX_FILES=5

# Search Configuration
# Elasticsearch Settings (Optional - enables advanced search features)
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_URL=${ELASTICSEARCH_URL}
ELASTICSEARCH_USERNAME=${ELASTICSEARCH_USERNAME}
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_PASSWORD}
ELASTICSEARCH_API_KEY=${ELASTICSEARCH_API_KEY}

# Search Performance
SEARCH_CACHE_TTL=600
SEARCH_MAX_RESULTS=1000
SEARCH_TIMEOUT=30000

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security Headers
HELMET_CSP_DIRECTIVES=default-src 'self'
HELMET_HSTS_MAX_AGE=31536000

# Database Backup (if using MongoDB Atlas)
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily

# Monitoring and Health Check
HEALTH_CHECK_ENDPOINT=/health
HEALTH_CHECK_TIMEOUT=5000

# Third-party Integrations
GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
GOOGLE_SEARCH_CONSOLE_ID=${GOOGLE_SEARCH_CONSOLE_ID}

# Performance
COMPRESSION_ENABLED=true
CACHE_TTL=3600

# Development/Debug (set to false in production)
DEBUG_MODE=false
DETAILED_ERRORS=false
